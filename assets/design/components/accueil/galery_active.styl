
*{box-sizing: border-box}

img {
    max-width: 100%;
    }

input[type=radio] {

position: absolute;
left: 0px;

}
	
.cadre-demo1 label {
	
cursor:pointer;
	
}

.cadre-demo1 {

overflow: hidden;
position: relative;
max-width: 600px;
margin: 2rem auto;
	
	}


.photos-mini {
	
	
padding-top: 66.67%;
display: flex;

	}

.miniature{

flex: 1;
padding:.25rem;
	
}
	

.fenetre {

position: absolute;
top: 0;
left: 0;
transition:transform .6s,opacity .6s;
transform:translatex(-100%);
opacity: 0;
	
	}

.fen:checked~ .fenetre {
	
transform:translatex(0%);
opacity: 1;
	
	}

.figcaption {

position: absolute;
top: 0;
left: 0;
padding: .25rem;
transition: opacity .4s;
opacity: 0;
display: flex;
justify-content: center;
color: white;
background: hsla(0,0%,0%,.8);

}

.fen:checked~.figcaption {

opacity: 1;
	
	}