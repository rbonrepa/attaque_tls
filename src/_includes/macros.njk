
{% macro movingPicture(src, alt, width, height) %}
  <p class="picture moving-picture">
    <img src="{{ src }}" alt="{{ alt }}" width="{{ width }}" height="{{ height }}">
  </p>
{% endmacro %}

{% macro tattooBox(image, name='', height='', width='') %}
  <li class="projet-item">
      <a href="{{ image }}">
        <img src="{{ image }}" height="{{ height }}" width="{{ width }}" alt="{{ name }}">
      </a>
    </li>
{% endmacro %}

{% macro articleCard(article) %}
  <article class="article-card">
    <img src="{{ article.data.thumbnail }}" alt="Article image" class="image" width="224" height="224">
    <div class="desc">
      <h3 class="title">
        <a href="{{ article.url | url }}">{{ article.data.title }}</a>
      </h3>
      <p>{{ article.data.description }}</p>
    </div>
  </article>
{% endmacro %}
